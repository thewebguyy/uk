rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Helper function to check if user is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // PRODUCTS: Public read, Admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
      
      // Allow stock updates (if done from client side for temporary holds, otherwise use cloud functions)
      // For now, restrictive.
    }

    // ORDERS: Owner read, Auth create
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if request.auth != null;
      allow update: if isAdmin(); // Only admin updates status
    }

    // CUSTOM ORDERS: Owner read, Auth create
    match /custom_orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if request.auth != null;
      allow update: if isAdmin() || (isOwner(resource.data.userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['customer_approval']));
    }

    // REVIEWS: Public read, Auth create/update (own review)
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow users to delete their own review
      allow delete: if request.auth.uid == resource.data.userId || isAdmin();
    }
    
    // USERS: Owner read/write
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // SETTINGS / HOMEPAGE: Public read, Admin write
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
